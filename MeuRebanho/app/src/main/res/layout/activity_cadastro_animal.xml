<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.CadastroAnimalActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="480dp"
        android:dividerPadding="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43">

        <EditText
            android:id="@+id/cad_especie_animal"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:inputType="text"
            android:padding="8dp"
            android:text="Espécie" />

        <EditText
            android:id="@+id/cad_sexo_animal"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:inputType="text"
            android:padding="8dp"
            android:text="Sexo" />

        <EditText
            android:id="@+id/cad_cor_animal"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:inputType="text"
            android:padding="8dp"
            android:text="Cor" />

        <EditText
            android:id="@+id/cad_raca_animal"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:inputType="text"
            android:padding="8dp"
            android:text="Raça" />

        <EditText
            android:id="@+id/cad_datanasc_animal"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:inputType="text"
            android:padding="8dp"
            android:paddingTop="10dp"

            android:text="Data Nascimento"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/cad_codigo_animal"
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:inputType="text"
            android:padding="8dp"
            android:text="Codigo" />

    </LinearLayout>

    <Button
        android:id="@+id/btncad_animal"
        android:layout_width="327dp"
        android:layout_height="59dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/verdefolha"
        android:text="Cadastrar animal"
        android:textAlignment="center"
        android:textSize="18sp"
        app:cornerRadius="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:text="Cadastro de Animais"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>