<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

  <!-- criando aba superior da tela -->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/toolbar_user"
      android:layout_width="410dp"
      android:layout_height="60dp"
      android:layout_marginTop="32dp"
      android:background="@color/white"
      android:padding="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <!-- adicionando saudacao usuario -->
    <TextView
        android:id="@+id/tv_user_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá, usuário"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <!-- adicionando recyclerview como menu -->
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_list_menu"
      android:layout_width="347dp"
      android:layout_height="565dp"
      android:background="@color/white"
      app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_user"

      tools:listitem="@layout/item_menu" />
  </androidx.constraintlayout.widget.ConstraintLayout>