<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ListPesosAnimais">

    <include
        android:id="@+id/tb_list_peso_ani"
        layout="@layout/toolbar_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:title="Peso Animal"/>


    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recycler_view_peso"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="match_parent"
        tools:listitem="@layout/activity_item_list_peso"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_animal_foreground"
        android:backgroundTint="@color/verdefolha"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>