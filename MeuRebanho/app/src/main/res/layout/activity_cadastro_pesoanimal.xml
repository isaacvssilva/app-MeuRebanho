<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CadastroPesoActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/tb_cadpeso_ani"
        layout="@layout/toolbar_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Peso Animal"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Input_Peso"
        android:layout_width="345dp"
        android:layout_height="75dp"
        android:layout_below="@id/tb_cadpeso_ani"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        app:counterEnabled="false"
        app:counterMaxLength="25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/peso_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:hint="Peso" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Input_data_peso"
        android:layout_width="345dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/Input_Peso"
        android:padding="6dp"
        app:counterEnabled="false"
        app:counterMaxLength="25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/data_peso_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:hint="Data da pesagem" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_peso_animal"
        android:layout_width="327dp"
        android:layout_height="59dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/verdefolha"
        android:text="Adicionar Peso"
        android:textAlignment="center"
        android:textSize="18sp"
        app:cornerRadius="12sp" />

</RelativeLayout>