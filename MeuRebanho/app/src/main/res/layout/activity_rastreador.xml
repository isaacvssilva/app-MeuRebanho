<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RastreadorActivity">

    <include
        android:id="@+id/tb_rastreador"
        layout="@layout/toolbar_principal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/configRastreador"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginTop="120dp"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawableTint="@color/white"
        android:text="Configurar Rastreador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_rastreador" />

    <Button
        android:id="@+id/config_gateway"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginTop="100dp"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawableTint="@color/white"
        android:text="Configurar Gateway"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configRastreador" />


</androidx.constraintlayout.widget.ConstraintLayout>